@model Note_Info;



<html>
    <head>

    </head>

    <body style="background-color:lightblue">

        <div class="upper-part">

            <h1>
                Here you can edit your Task
            </h1>

            <div class="add-newTask" style="display:inline-block";>

                    <form class="d-flex" method="post" asp-action="CreateNote" asp-controller="ToDo">
                    <input class="form-control me-sm-2" asp-for="@Model.NoteText"
