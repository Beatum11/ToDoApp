@model List<ToDoApp.Models.Note_Info>;

<html>
    <head>



    </head>

    <body>

        <div class="upper-part">

            <h1>
                Write a Task
            </h1>

            <div class="add-newTask" style="display:inline-block";>

                    <form class="d-flex" method="post" asp-action="CreateNote" asp-controller="ToDo">
                    <input class="form-control me-sm-2"
                    name="noteText" type="text" placeholder="Write something here">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Add Task</button>
                    </form>
            </div>
        </div>

        
        <div class="middle-part">

            <p style="display:block;margin-bottom:10px;text-align:left;">
                Tasks
            </p>

                <list>
                @foreach(var note in Model)
                {
                   <div class="realTask" style="display:inline-block; margin-right:40px;
                    margin-bottom:40px">

                     <div class="card border-warning mb-1" style="width: 30rem;">
                      <div class="card-body">
                        <h4 class="card-title">@note.NoteText</h4>
                        <p class="card-text"></p>
                      </div>

                    <div class="buttons" style="display:inline-block">

                    <a asp-controller="ToDo" asp-action="Edit"
                     class="btn btn-outline-danger" asp-route-noteText="@note.NoteText">
                        Edit
                    </a>
                    
                        <a asp-controller="ToDo" asp-action="DeleteNote"
                         class="btn btn-outline-success" asp-route-noteText="@note.NoteText">
                            Done
                        </a>
                    </div>
                   </div>
                   </div>
                   
                 
                }
                </list>
        </div>
    </body>


     




</html>

  


